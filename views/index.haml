!!!
%html
  %head
    %link{:rel => :stylesheet, :type => :"text/css", :href => "css/all.css"}
    %link{:rel => :stylesheet, :type => :"text/css", :href => "css/loader01.css"}
  %body
    .header CSS Loaders
    .loaders
      -num_loaders.times do |k|
        -cstr = ( k < 10 ? "0#{k+1}" : "#{k+1}")
        .loader
          .container
            %div{:class => "loader#{cstr}" }
          .name= loaders[k]